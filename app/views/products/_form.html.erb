<%= simple_form_for @product, html:{:multipart => true} do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
  	<%= f.input :image, as: :file %>
    <%= f.input :title %>
    <%= f.input :description, as: :text %>
    <%= f.input :price %>
  </div>
</br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>