<%= simple_form_for(@product, html: {class: "form-horizontal"}) do |f| %>

  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, as: :text %>
    <%= f.input :price %>
  </div>
</br>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>

<% end %>